<div class="mb-6 flex items-center justify-between">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Inventory Logs</h2>
        <p class="text-sm text-gray-500">Track stock adjustments and reconciliation history.</p>
    </div>
    <a href="/inventory" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
        &larr; Back to Inventory
    </a>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-gray-50 text-gray-600 font-medium border-b border-gray-100">
                <tr>
                    <th class="px-6 py-3">Time</th>
                    <th class="px-6 py-3">Product</th>
                    <th class="px-6 py-3 text-center">Previous</th>
                    <th class="px-6 py-3 text-center">New</th>
                    <th class="px-6 py-3 text-center">Variance</th>
                    <th class="px-6 py-3">Cashier</th>
                    <th class="px-6 py-3">Reason</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% if (logs && logs.length > 0) { %>
                    <% logs.forEach(log => { %>
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-3 text-gray-600"><%= new Date(log.timestamp).toLocaleString() %></td>
                        <td class="px-6 py-3 font-medium text-gray-900"><%= log.productName %></td>
                        <td class="px-6 py-3 text-center text-gray-600"><%= log.oldStock %></td>
                        <td class="px-6 py-3 text-center text-gray-900"><%= log.newStock %></td>
                        <td class="px-6 py-3 text-center font-bold <%= log.variance < 0 ? 'text-red-600' : 'text-green-600' %>">
                            <%= log.variance > 0 ? '+' : '' %><%= log.variance %>
                        </td>
                        <td class="px-6 py-3 text-gray-600"><%= log.cashierName %></td>
                        <td class="px-6 py-3 text-gray-500 italic"><%= log.reason || '-' %></td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                            <i data-lucide="clipboard-list" class="w-12 h-12 mx-auto mb-3 text-gray-300"></i>
                            <p>No inventory logs found.</p>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
