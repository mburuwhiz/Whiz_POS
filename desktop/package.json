{
  "name": "@whiz-pos/desktop",
  "version": "1.0.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "package": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@whiz-pos/shared": "file:../shared",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "svelte": "^4.2.18",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.whizpos.desktop",
    "productName": "Whiz POS",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
